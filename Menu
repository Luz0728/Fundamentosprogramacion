#include <iostream>
#include <cmath>
using namespace std;
int main()
{
 int opcion;
 double a, b, A, radio, lado, P=3.1416;
 do{
     cout<<"Menu:"<<endl;
     cout<<"1. Area de un triangulo"<<endl;
     cout<<"2. Area de un cuadrado"<<endl;
     cout<<"3. Area de la circunferencia"<<endl;
     cout<<"0.Salir"<<endl;
     cout<<"Ingrese la opcion"<<endl;
     cin>>opcion;
     switch(opcion){
         case 1:
         cout<<"Ingrese la altura:";
         cin>>a;
         cout<<"Ingrese la base";
         cin>>b;
         A=(b*a)/2;
         cout<<"El area es:"<<A<<endl;
         break;
         case 2:
         cout<<"Ingrese el lado:"<<endl;
         cin>>lado;
         A=pow(lado,2);
         cout<<"El area es:"<<A<<endl;
         break;
         case 3:
         cout<<"Ingrese el radio:"<<endl;
         cin>>radio;
         A=P*pow(radio,2);
         cout<<"El area es:"<<A<<endl;
         break;
         case 0:
         cout<<"fin";
         break;
         default:
         cout<<"error"<<endl;
     }
    
         
 } while (opcion!=0);
    return 0;
}
