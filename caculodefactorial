#include <iostream>
using namespace std;

int main()
{
    int n, factorial;
    do {
        cout << "Ingresa un numero entero positivo: ";
        cin >> n;
        if (n <= 0) {
            cout << " El numero debe ser mayor que 0";
        }
    } while (n <= 0);
    factorial = 1;
    for (int i = 1; i <= n; i++) {
        factorial = factorial * i;
    }
    cout << " El factorial de " << n << " es: " << factorial << endl;

    return 0;
}
